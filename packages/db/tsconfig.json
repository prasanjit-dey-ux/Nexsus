{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2020",
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",      
    "noEmit": true,
    "rootDir": "src",
    "lib": ["es2020"],
    "types": ["node"]                  // <--- always add this for Node packages!
  },
  "include": ["src"]
}

