generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  email         String @unique
  username      String @unique
  password      String
  displayName   String?
  bio           String?
  createdAt     DateTime @default(now())
}

model Space {
  id            String @id @default(uuid())
}

model Map {
  id       String @id @default(cuid())
}