{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",     // Use "nodenext" for best compatibility with Node/monorepos
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,                     // If you only use esbuild for emitting code
    "types": ["node"],                  // For Node.js and JWT typings
    "lib": ["es2020"]
  },
  "include": ["src"]
}
